<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="?attr/actionBarSize">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_middle"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <eu.codlab.cypherx.views.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                android:clickable="false"
                android:text="o"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <eu.codlab.markdown.MarkdownView
                android:id="@+id/markdown_encrypted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin" />

            <eu.codlab.cypherx.views.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                android:clickable="false"
                android:text="l"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <eu.codlab.markdown.MarkdownView
                android:id="@+id/markdown_share_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin" />


            <eu.codlab.cypherx.views.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                android:clickable="false"
                android:text="q"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <eu.codlab.markdown.MarkdownView
                android:id="@+id/markdown_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin" />

            <eu.codlab.cypherx.views.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_margin"
                android:clickable="false"
                android:text="n"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <eu.codlab.markdown.MarkdownView
                android:id="@+id/markdown_enhance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>